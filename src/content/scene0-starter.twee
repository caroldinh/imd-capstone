<style>

#title {
    display: block;
    width: 100%;
    line-height: 115%;
    font-family: "Press Start 2P", system-ui;
    font-size: 2em;
    text-align: center;
}

#game-start {
    background-color: #d6cec1;
    border: 1px solid black;
    border-radius: 2px;
    box-shadow: 1px 1px 1px 1px rgba(18, 29, 74, 0.3);
    margin-left: auto;
    margin-right: auto;
    cursor: pointer;
    padding-left: 8px;
    padding-right: 8px;
    transition: 0.3s;
}

#game-start:hover {
    background-color: #9c958a;
    box-shadow: 2px 2px 2px 2px rgba(18, 29, 74, 0.3);
}

#game-start a{
    all: unset;
    font-weight: bolder;
}

#game-start a::before {
    all: unset;
}
  #welcome {
    display: block;
    width: 100%;
    text-align: center;
    line-height: 100%;
  }
  #passages {
   all: unset;
   width: 100vw;
   height: 100vh;
  }
 .passage {
    display: flex;
    flex-direction: column;
    width: 40vh;
    margin-left: auto;
    margin-right: auto;
    line-height: 100%;
    position: fixed;
    left: 100px;
    top: 100px;
 }
 .macro-timed {
    display: inherit;
    flex-direction: inherit;
 }
 body {
   background-color: var(--olsen-theme);
   background-image: url("images/computer.png");
    background-size: auto 100vh;
    background-position: center top;
    background-repeat: no-repeat;
 }
</style>

