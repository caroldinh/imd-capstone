:: Start Screen
<<silently>>\
    <<timed 0s>>
        <<audio "intro-play-once" play>>\
        <<next 11.3s>><<audio "intro-loop" loop play>>
    <</timed>>
   <<repeat 2s>>\
      <<script>>
         let passage = $(".passage")[0];
         console.log(passage);
         let boundingBox = passage.getBoundingClientRect();
         let x = Math.floor(Math.random() * (window.innerWidth - boundingBox.width));
         let y = Math.floor(Math.random() * (window.innerHeight - boundingBox.height));
         $(passage).css("left", x);
         $(passage).css("top", y);
      <</script>>
   <</repeat>>
